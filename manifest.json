{
  "manifest_version": 3,
  "name": "Bluesky Notifications",
  "version": "1.0",
  "description": "Display unread notifications count for Bluesky",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "webRequest",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://bsky.app/*",
    "*://*.bsky.network/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://bsky.app/*", "*://*.bsky.network/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
} 